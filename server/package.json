{
  "name": "server",
  "version": "1.0.0",
  "description": "GraphQL Server for Application",
  "main": "index.js",
  "repository": "https://github.com/machooper/todo",
  "author": "mac",
  "license": "MIT",
  "private": true,
  "prettier": {
    "arrowParens": "avoid",
    "jsxBracketSameLine": true,
    "jsxSingleQuote": true,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "eslintConfig": {
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "plugin:react/recommended",
      "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": [
      "react",
      "@typescript-eslint"
    ],
    "rules": {
      "react/react-in-jsx-scope": 0,
      "@typescript-eslint/explicit-module-boundary-types": 0,
      "react/prop-types": 0,
      "space-before-function-paren": 0
    }
  },
  "dependencies": {
    "apollo-server": "^2.25.2",
    "eslint": "^7.30.0",
    "graphql": "^15.5.1",
    "mongoose": "^5.13.2",
    "prettier": "^2.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/node": "^7.14.7",
    "@babel/preset-env": "^7.14.7",
    "babel-loader": "^8.2.2"
  }
}
