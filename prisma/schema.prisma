// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = process.env.DATABASE_URL
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id Int @id @default(autoincrement())
  username String
  first_name String
  last_name String
  todos Todo[]
}

model Todo {
  id Int @id @default(autoincrement())
  text String
  complete Boolean
  user User @relation(fields: [userId], references: [id])
  userId Int
}