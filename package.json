{
  "name": "todo",
  "version": "0.2.0",
  "description": "A minimal todo application.",
  "author": {
    "name": "Mac",
    "email": "mac.develops@icloud.com",
    "url": "https://machooper.tech"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/machooper/todo"
  },
  "keywords": [
    "next",
    "typescript",
    "react",
    "starter"
  ],
  "scripts": {
    "dev": "next",
    "build": "next build",
    "build:static": "next build && next out",
    "start": "next start",
    "prettier": "prettier --write components/*/**.tsx library/*.ts pages/*.tsx pages/**/*.tsx pages/api/*.ts styles/*.ts",
    "lint": "eslint components/*/**.tsx library/*.ts pages/*.tsx pages/**/*.tsx pages/api/*.ts styles/*.ts --fix",
    "test": "yarn prettier && yarn lint"
  },
  "dependencies": {
    "next": "^11.0.1-canary.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@chakra-ui/icons": "^1.0.13",
    "graphql": "^15.5.1",
    "@chakra-ui/react": "^1.6.4",
    "@emotion/react": "^11.4.0",
    "@emotion/styled": "^11.3.0",
    "@types/node": "^15.12.4",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "eslint": "^7.12.1",
    "eslint-config-next": "^11.0.1",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.24.0",
    "framer-motion": "^4",
    "husky": "^7.0.0",
    "prettier": "^2.3.1",
    "prisma": "^2.26.0",
    "react-icons": "^4.2.0",
    "swr": "^0.5.6",
    "typescript": "^4.3.4"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxBracketSameLine": true,
    "jsxSingleQuote": true,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "eslintConfig": {
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "plugin:react/recommended",
      "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": [
      "react",
      "@typescript-eslint"
    ],
    "rules": {
      "react/react-in-jsx-scope": 0,
      "@typescript-eslint/explicit-module-boundary-types": 0,
      "react/prop-types": 0,
      "space-before-function-paren": 0
    }
  }
}
